---
import Icon from "astro-icon";
import { Image } from "astro:assets";
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="theme-color" content="#8955b3" />
        <title>Thereallo's Portfolio</title>
        <link rel="stylesheet" href="/use.min.css" />
        <style>
            body {
                font-family: "SF Pro Display", sans-serif;
            }
        </style>
    </head>
    <body
        class="bg-[#09090b] text-white flex items-center justify-center min-h-screen"
    >
        <main class="max-w-3xl p-8 flex items-start">
            <Image
                src="https://github.com/Thereallo1026.png"
                alt="thereallo"
                class="rounded-full mr-6 w-32 h-32 object-cover"
                width={128}
                height={128}
                loading="eager"
            />
            <div>
                <h1 class="text-5xl font-bold mb-1">
                    Hello, I'm <a
                        class="transition-all duration-300 ease-in-out bg-clip-text bg-gradient-to-r from-purple-400 to-pink-500 text-transparent"
                    >
                        Lo</a>
                </h1>
                <p class="text-xl mb-2">
                    I am developer, I think. I mix lofi music and code a bit.
                </p>
                <div class="mt-2 flex items-center opacity-50">
                    <Icon
                        name="mdi:spotify"
                        size={20}
                        class="text-gray-200 mr-1"
                    />
                    <a
                        href="mailto:spotify.us.2@thereallo.dev"
                        class="text-gray-200 text-sm hover:text-gray-300"
                        >spotify.us.2@thereallo.dev</a
                    >
                </div>
                <nav class="flex space-x-3 mt-2" aria-label="socials">
                    <a
                        href="https://github.com/Thereallo1026"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-gray-200 hover:text-gray-300"
                        aria-label="GitHub profile"
                    >
                        <Icon name="mdi:github" size={24} />
                    </a>
                    <a
                        href="https://twitter.com/@Thereallo6"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-gray-200 hover:text-gray-300"
                        aria-label="Twitter profile"
                    >
                        <Icon name="mdi:twitter" size={24} />
                    </a>
                    <!-- <a href="https://linkedin.com/" target="_blank" rel="noopener noreferrer" class="text-white hover:text-gray-300" aria-label="LinkedIn profile">
                    <Icon name="mdi:linkedin" size={24} />
                </a> -->
                </nav>
            </div>
        </main>
    </body>
</html>
